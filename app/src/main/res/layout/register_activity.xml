<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:background="@drawable/background_gradient_main"
        android:id="@+id/heading"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        />

    <ImageView
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/triangle"
        android:layout_marginTop="100sp"
        android:layout_marginRight="-20sp"
        android:rotation="100"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="-30dp"
        android:layout_marginRight="-35dp"
        android:src="@drawable/designs" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Yourself"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="80dp"
        android:id="@+id/welcome_txt"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up to continue"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"

        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/welcome_txt"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:text="EMAIL"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:id="@+id/email_label"
        />

    <EditText
        android:id="@+id/email_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_label"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:hint="Enter your email address"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_box"
        android:text="FULL NAME"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:id="@+id/name_label"
        />

    <EditText
        android:id="@+id/name_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_label"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:inputType="text"
        android:hint="Enter your name"

        />







    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_box"
        android:text="PASSWORD"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:id="@+id/password_label"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_label"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        >


    <EditText
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_label"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:hint="Set your password"

        />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/accept_terms_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_box"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Agree to"
        />
    <TextView
        android:id="@+id/our_terms_and_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_box"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/accept_terms_check"
        android:text="terms &amp; conditions"
        android:textColor="#48c6ef"
        android:textStyle="bold"
        android:textSize="15dp"
        />


    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/accept_terms_check"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_button_background"
        android:textAllCaps="false"
        android:text="Create Account"
        android:textColor="#fff"
        android:textSize="20dp" />



